<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>

<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Nominal</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/nominal">Category</a></li>
              <li class="breadcrumb-item active">Create Data</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-primary">
              <!-- /.card-header -->
              <div class="card-header">
                <div class="card-title">Form Update Nominal <%= data.coinName %></div></div>
              </div>
              <form action="/nominal/update/<%= data.id %>?_method=PUT" method="post">
                <div class="card-body">
                  <div class="form-group">
                    <label>Coin Name</label>
                    <select class="form-control select2" name="coinName" required style="width: 100%;">
                      <option selected="selected">Choose Coin</option>
                      <option 
                        value="Bronze" 
                        <% if(data.coinName === 'Bronze') { %>  selected <% } %>
                        >Bronze</option>
                      <option 
                        value="Silver"
                        <% if(data.coinName === 'Silver') { %>  selected <% } %>
                      >Silver</option>
                      <option 
                        value="Gold"
                        <% if(data.coinName === 'Gold') { %>  selected <% } %>
                      >Gold</option>
                      <option 
                        value="Diamond"
                        <% if(data.coinName === 'Diamond') { %>  selected <% } %>
                      >Diamond</option>
                      <option 
                        value="Jewel"
                        <% if(data.coinName === 'Jewel') { %>  selected <% } %>
                      >Jewel</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="coinQuantity">Amounts Coin</label>
                    <input type="number" name="coinQuantity" value="<%= data.coinQuantity %>" class="form-control" id="coinQuantity" placeholder="Insert amount coin" required autocomplete="on">
                  </div>

                  <div class="form-group">
                    <label for="price">Price</label>
                    <input type="number" name="price" value="<%= data.price %>" class="form-control" id="price" placeholder="Insert amount coin" required autocomplete="on">
                  </div>
                </div>
  
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Save</button>
                </div>
              </form>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->

            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>

<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>